{
  "extends": ["airbnb", "react", "jest-enzyme"],
  "parser": "babel-eslint",
  "rules": {
    "linebreak-style": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true,
        "allowTernary": true,
        "allowTaggedTemplates": true
      }
    ]
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  }
}
